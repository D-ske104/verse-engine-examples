{
  "scripts": {
    "clean": "rimraf dist *.clean **/*.clean",
    "local": "npm run build && npx http-server -c-1 -p 8080 --gzip",
    "local-ssl": "npm run build && npx http-server -c-1 --ssl --key ./cert/localhost+2-key.pem --cert ./cert/localhost+2.pem -p 8080 --gzip",
    "build:components": "esbuild --format=iife --minify --sourcemap src/components/index.ts --bundle --outfile=dist/components.js",
    "build": "run-p build:* && echo \"build succeeded! $(date)\"",
    "lint": "tsc --noEmit && npx eslint .",
    "check-update": "ncu"
  },
  "#main": "",
  "#module": "",
  "#types": "",
  "devDependencies": {
    "@types/aframe": "^1.2.2",
    "@types/hls.js": "^1.0.0",
    "@types/three": ">=0.146.0",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "esbuild": "^0.17.8",
    "esbuild-plugin-external-global": "^1.0.1",
    "eslint": "^8.34.0",
    "http-server": "^14.1.1",
    "npm-check-updates": "^16.7.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^4.1.2",
    "typescript": "^4.9.5"
  }
}
